<h1>Index des events</h1>

<div class="container">
  <h4>Upcoming events !!</h4>
    <% @upcoming.each_with_index do |event, i| %>
      <div class="form-group border border-info">
        <p><%= event.description %></p>
        <p><%= event.date %></p>
        <p><%= event.place %></p>
        <%= link_to "Plus d'infos", event_path(event.id), class: "btn btn-outline-info" %>
        <%= if !(@attending_list.include?(event)) then link_to "Subscribe !", {:action => :subscribe, :event => event}, :method => :put, class: "btn btn-outline-success" end %>
      </div>
    <% end %>
</div>


<div class="container">
  <h4>Past...</h4>
    <% @past.each_with_index do |event, i| %>
      <div class="form-group border border-muted">
        <p><%= event.description %></p>
        <p><%= event.date %></p>
        <p><%= event.place %></p>
        <%= link_to "Plus d'infos", event_path(event.id), class: "btn btn-outline-secondary" %>
      </div>
  <% end %>
</div>
